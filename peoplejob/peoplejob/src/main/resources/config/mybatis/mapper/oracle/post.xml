<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="config.mybatis.mapper.oracle.post">

	<select id="selectPostAll" parameterType="map" resultType="map">
		select * from 
		(
			select A.*, rownum as RNUM from 
			(
			select * from post_all
			<if test="postVo.searchKeyword!=null and postVo.searchKeyword!='' 
						and postVo.searchCondition!=null and postVo.searchCondition!=''">
				<where>
					<if test='postVo.searchCondition=="boardTitle,boardcontent"'>
						 boardtitle like '%' || #{postVo.searchKeyword} || '%'
						or boardcontent like '%' || #{postVo.searchKeyword} || '%'
					</if>
					<if test='postVo.searchCondition == "memberid"'>
						 memberid like '%' || #{postVo.searchKeyword} || '%'
					</if>
					<if test='postVo.searchCondition == "type"'>
						${postVo.searchCondition} like '%' || #{postVo.searchKeyword} || '%'
					</if>
					<if test="stardDay!='' and endDay !=''">
						<![CDATA[boardRegdate2 >= ${stardDay} and boardRegdate2 < to_date(#{endDay})+1 ]]>
					</if>
				</where>
			</if>
			<if test="filterCode != null and filterCode!=''">
				order by ${postVo.filterCode} 
				<if test='filterKey=="Y"'>
					desc
				</if>
			</if>
			<if test="filterCode==null or filterCode==''">
				order by boardregdate2 desc
			</if>
			) A
		)
		<![CDATA[where RNUM>#{postVo.firstRecordIndex}  
		and RNUM<=#{postVo.firstRecordIndex} + #{postVo.recordCountPerPage}]]> 
	</select>
	
